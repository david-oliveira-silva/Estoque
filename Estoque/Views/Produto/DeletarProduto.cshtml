@using DOMAIN.Enum
@using DOMAIN.Model

@model ProdutoModel
@{
	ViewData["Title"] = "Deletar produtos";
}

@if (TempData["Sucesso"] != null)
{
	<p class="alert alert-success">@TempData["Sucesso"]</p>
}
@if (TempData["Erro"] != null)
{
	<p class="alert alert-danger">@TempData["Erro"]</p>
}

<div class="Titulo d-flex justify-content-center">
	<h1> Deletar produtos</h1>
</div>

<form asp-controller="Produto" asp-action="DeletarProduto" method="post">
	<div class="Produtos">

		<input type="hidden" asp-for="CodigoProduto" value="@Model.CodigoProduto" />
		<div class="col">
			<label asp-for="CodigoProduto">Codigo do produto</label>
			<input asp-for="CodigoProduto" class="form-control" disabled>
		</div>

		<div class="col">
			<label asp-for="NomeProduto">Nome do Produto</label>
			<input asp-for="NomeProduto" type="text" class="form-control" disabled>
		</div>
		<div class="col">
			<label asp-for="ValorProduto">Valor do Produto</label>
			<input asp-for="ValorProduto" type="number" class="form-control" disabled>
		</div>
		<div class="col">
			<label asp-for="Disponibilidade">Disponibilidade</label>

			<select asp-for="Disponibilidade" class="form-control" disabled>
				<option disabled selected style="color: gray;">Selecione</option>
				@foreach (DisponibilidadeEnum disponibilidade in Enum.GetValues(typeof(DisponibilidadeEnum)))
				{
					<option value="@disponibilidade">@disponibilidade</option>
				}
			</select>
		</div>
		<div id="Botoes" class="m-3 d-flex flex-row justify-content-center gap-3">

			<button type="submit" class="btn btn-danger" style="width:250px">Deletar</button>

			<a class="btn btn-success" style="width:250px" asp-controller="Produto" asp-action="ListarProdutos" method="get">Voltar</a>
		</div>

	</div>
</form>
