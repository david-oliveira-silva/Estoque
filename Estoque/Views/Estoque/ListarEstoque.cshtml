@using DOMAIN.Model
@model List<EstoqueModel>
@{
	ViewData["Title"] = "Estoque produtos";
}

<div class="d-flex justify-content-between Titulo m-3">

	<h1>Estoque Produtos</h1>
	
	<a class="btn btn-primary" asp-controller="Estoque" asp-action="CadastrarEstoque">Adicionar Estoque</a>
</div>

<table class="table">
	<thead>
			<tr class="table-dark">
			<th scope="col">Codigo</th>
			<th scope="col">Produto</th>
			<th scope="col">Quantidade</th>
			<th scope="col">Opções</th>
		</tr>
	</thead>
	@foreach (EstoqueModel e in Model)
	{
		<tbody>
			<tr>
				<th scope="row">@e.CodigoEstoque</th>
				<td>@e.Produto?.NomeProduto</td>
				<td>@e.QuantidadeEstoque</td>
				<td>opções a fazer</td>
			</tr>
		</tbody>
	}
</table>
